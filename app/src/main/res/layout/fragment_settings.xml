<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Currency Preference -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency_preference"
        style="@style/TextAppearance.Title"
        android:paddingBottom="8dp" />

    <Spinner
        android:id="@+id/currencySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/currency_options"
        android:padding="8dp"
        android:minHeight="48dp" /> <!-- Ensures larger touch area -->

    <!-- Theme Preference -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/theme_preference"
        style="@style/TextAppearance.Title"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/themeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dark_mode"
        android:padding="8dp"
        android:minHeight="48dp" /> <!-- Ensures larger touch area -->

    <!-- Notification Preference -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification_preference"
        style="@style/TextAppearance.Title"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/notificationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_notifications"
        android:padding="8dp"
        android:minHeight="48dp" /> <!-- Ensures larger touch area -->

</LinearLayout>

